<p id="notice"><%= notice %></p>
<h1>Blogs</h1>
<table border="2" align="center" style="background: linear-gradient(to bottom, #33ccff 0%,
#ff99cc 100%)">
  <thead> 
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        
          <td><%= image_tag blog.image_url.to_s %></td>

        <td><%= blog.category %></td>
        
        <td><%= blog.description %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if @blogs.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>

<%= link_to 'New Blog', new_blog_path %>
