<p id="notice"><%= notice %></p>
<h1>Blogs</h1>
<table class="table">
  <thead> 
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        
        <td><%= image_tag blog.image_url.to_s %></td>
        <td>
          <% if blog.category.present? %>
            <%= Category.find(blog.category).try(:name) %>
          <%end%>  
        </td>
        <td><%= blog.description %></td>
        <td><%= link_to 'Show', blog , class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if @blogs.blank? %>
  <h4>Result can not found <%= params[:search] %>.</h4>
<% end %>
<%= link_to 'New Blog', new_blog_path %>